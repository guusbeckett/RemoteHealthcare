using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Customer_App.Classes
{
    class Data
    {
        private List<Ketler_X7_Lib.Objects.Value> valueList;
        private Ketler_X7_Lib.Networking.Client client;

        public Data()
        {
            valueList = new List<Ketler_X7_Lib.Objects.Value>();
            client = new Ketler_X7_Lib.Networking.Client();
            client.DataReceived += client_DataReceived;
        }

        void client_DataReceived(object sender, Ketler_X7_Lib.Networking.Server.DataReceivedEventArgs e)
        {
            if (((Ketler_X7_Lib.Objects.Packet)e.PacketData).Flag == Ketler_X7_Lib.Objects.Packet.PacketFlag.PACKETFLAG_VALUES)
            {
                valueList = (List<Ketler_X7_Lib.Objects.Value>)((Ketler_X7_Lib.Objects.Packet)e.PacketData).Data;
            }
        }

        public void addData(Ketler_X7_Lib.Objects.Value newValue)
        {
            lock (valueList)
            {
                valueList.Add(newValue);
            }
        }

        public void sendData()
        {
            client.routeToServer(new Ketler_X7_Lib.Objects.Packet()
            {
                Flag = Ketler_X7_Lib.Objects.Packet.PacketFlag.PACKETFLAG_VALUES,
                Data = valueList
            });
        }
    }
}
